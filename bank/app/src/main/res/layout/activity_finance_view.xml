<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FinanceView">
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">
  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="300dp"
      android:background="@drawable/blue_bg">
  <ImageView
      android:layout_width="380dp"
      android:layout_height="250dp"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="40dp"
      android:src="@drawable/card" />
    <TextView
        android:id="@+id/musteriIsım"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="215dp"
        android:layout_marginLeft="50dp"
        android:fontFamily="sans-serif"
        android:text="RUKİYE İREM SARISOY"
        android:textColor="@color/white"
        android:textSize="14.5sp" />
    <TextView
        android:id="@+id/hesapNumara"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="50dp"
        android:fontFamily="sans-serif"
        android:text="0000 0000 0000 0000"
        android:textColor="@color/white"
        android:textSize="20.5sp" />
    <TextView
        android:id="@+id/sonTarih"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="185dp"
        android:layout_marginLeft="160dp"
        android:fontFamily="sans-serif"
        android:text="11/22"
        android:textColor="@color/white"
        android:textSize="14.5sp" />
    <TextView
        android:id="@+id/kartNumara"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="185dp"
        android:layout_marginLeft="65dp"
        android:fontFamily="sans-serif"
        android:text="0124"
        android:textColor="@color/white"
        android:textSize="14.5sp" />
  </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
  </LinearLayout>

  </RelativeLayout>

  </androidx.constraintlayout.widget.ConstraintLayout>